{
  "name": "agentmarkdown",
  "description": "An accurate, extensible, and fast HTML-to-markdown converter.",
  "homepage": "https://github.com/activescott/agentmarkdown",
  "version": "0.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "bin": {
    "agentmarkdown": "dist/cjs/cli/agentmarkdown.js"
  },
  "files": [
    "dist/"
  ],
  "author": {
    "name": "Scott Willeke",
    "email": "scott@willeke.com",
    "url": "https://scott.willeke.com/"
  },
  "repository": "https://github.com/activescott/agentmarkdown",
  "bugs": {
    "url": "https://github.com/activescott/agentmarkdown/issues"
  },
  "license": "MPL-2.0",
  "scripts": {
    "cm": "git-cz",
    "build:cjs": "rm -rfd ./dist/cjs; tsc --project tsconfig.cjs.json",
    "build:es": "rm -rfd ./dist/es; tsc --project tsconfig.es.json",
    "build": "rm -rfd ./dist && yarn run build:es && yarn run build:cjs",
    "lint": "prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx,md,yml,json,html}\" && yarn run eslint",
    "eslint": "./node_modules/.bin/eslint . --ext .ts",
    "lint-fix": "yarn run eslint --fix && prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx,md,yml,json,html}\"",
    "test": "jest --coverage",
    "dev": "jest --watch",
    "pretest": "yarn run lint",
    "coverage-publish": "cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@semantic-release/github": "5.5.0-beta.1",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.5",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "semantic-release": "=16.0.0-beta.23",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "domhandler": "^3.0.0",
    "htmlparser2": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "markdown",
    "html",
    "mrkdwn",
    "markup",
    "parser",
    "commonmark",
    "transform",
    "compile",
    "stringify"
  ]
}
